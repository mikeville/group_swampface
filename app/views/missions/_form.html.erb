
<%= form_for @mission do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title %> </br>

  <%= f.label :target %>
  <%= f.text_field :target %> </br>

  <%= f.label :launch_date %>
  <%= select_month(Date.today, {}, name: 'launch[month') %>
  <%= select_day(Date.today, {}, name: 'launch[day') %>
  <%= select_year(Date.today, {}, name: 'launch[year') %> </br>

  <%= f.label :vehicle_name %>
  <%= f.text_field :vehicle_name %> </br>
  
   <% if @mission.id %>
    <%= f.submit 'Update' %>
  <% else %>
    <%= f.submit 'Create' %>
  <% end %>
<% end %>